% second stage
\def\bxce@parse@second{%
  \let\bxce@text\@empty
  \let\bxce@T\bxce@parse@second@T
  \let\bxce@O\bxce@parse@second@O
  \let\bxce@S\bxce@parse@second@S
  \let\bxce@E\bxce@parse@second@E
}
\protected\def\bxce@parse@second@T.\bxce@end{%
